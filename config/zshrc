### Zinit
if [[ ! -f $HOME/.zinit/bin/zinit.zsh ]]; then
    print -P "%F{33}â–“â–’â–‘ %F{160}Installing %F{33}ZINIT%F{160} Initiative Plugin Manager (%F{33}z-shell/zinit%F{160})â€¦%f"
    command mkdir -p "$HOME/.zinit" && command chmod g-rwX "$HOME/.zinit"
    command git clone -q https://github.com/z-shell/zinit "$HOME/.zinit/bin" && \
        print -P "%F{33}â–“â–’â–‘ %F{34}Installation successful.%f%b" || \
        print -P "%F{160}â–“â–’â–‘ The clone has failed.%f%b"
fi

[ ! -f "${HOME}/.zinit/bin/zmodules/Src/zshell/zplugin.so" ] && source "${HOME}/.zinit/bin/zinit.zsh" && zinit module build
module_path+=( "${HOME}/.zinit/bin/zmodules/Src"  )
zmodload zshell/zplugin
# zpmod source-study -l

source "$HOME/.zinit/bin/zinit.zsh"
